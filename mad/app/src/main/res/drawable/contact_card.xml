<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background -->
    <solid android:color="#FAFAFF"/>

    <!-- Rounded Corners -->
    <corners android:radius="16dp"/>

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Grey Border -->
    <stroke
        android:width="1.5dp"
        android:color="#D3D3D3"/>
</shape>
