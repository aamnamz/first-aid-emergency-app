<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F7F9FF">

            <!-- CATEGORY TITLE ROW -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:background="@drawable/rounded_blue_bg"
                android:padding="15dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/applogo"
                    app:tint="#3A6FA0" />

                <TextView
                    android:id="@+id/appName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Aid Assist"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/tvHello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/appName"
                    android:layout_marginTop="4dp"
                    android:text=" Quick Help, When Needed"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins" />

                <!-- SEARCH BAR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/search_bar_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <ImageView
                        android:id="@+id/img_search_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_search"
                        app:tint="#8A8A8A" />

                    <EditText
                        android:id="@+id/searchBar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Search first aid topics..."
                        android:paddingStart="10dp"
                        android:textColor="#000"
                        android:textColorHint="#8A8A8A"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"
                        android:textSize="13sp"
                        android:fontFamily="@font/poppins" />

                    <ImageView
                        android:id="@+id/img_voice_input"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_voiceicon"
                        app:tint="#cc1616" />
                </LinearLayout>
            </RelativeLayout>

            <!-- TITLE: Categories -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:paddingTop="22dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Categories"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/btnViewMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2F5A84"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>

            <!-- CATEGORY BUTTONS ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:weightSum="3">

                <!-- Burn -->
                <LinearLayout
                    android:id="@+id/cardBurn"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/category_card">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/burnicon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Burn"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#323232"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>

                <!-- Choking -->
                <LinearLayout
                    android:id="@+id/cardChoking"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/category_card">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/chokingicon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Choking"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#323232"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>

                <!-- CPR -->
                <LinearLayout
                    android:id="@+id/cardCPR"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/category_card">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/cpr" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="CPR"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#323232"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>
            </LinearLayout>

            <!-- QUICK ACTIONS TITLE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Quick Actions"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#cc1616"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/poppins" />

            <!-- QUICK ACTION CARDS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="20dp">

                <!-- My Checklist -->
                <LinearLayout
                    android:id="@+id/cardChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/list_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_profile"
                        app:tint="#5A6BF5" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Checklist"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#323232"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Make your own checklist"
                            android:textSize="10sp"
                            android:textColor="#666"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Essential Checklists -->
                <LinearLayout
                    android:id="@+id/cardFirstAid"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/list_card_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_firstaid"
                        app:tint="#2ECC71" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Essential Checklists"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#323232"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Checklists for various activities"
                            android:textSize="10sp"
                            android:textColor="#666"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Emergency Contacts -->
                <LinearLayout
                    android:id="@+id/cardHospital"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/list_card_bg"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/ic_phone"
                        app:tint="#E74C3C" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency Contacts"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#323232"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View emergency numbers"
                            android:textSize="10sp"
                            android:textColor="#666"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- FLOATING CALL BUTTON -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabEmergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call 1122"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            app:backgroundTint="#cc1616"
            app:icon="@null"
            android:fontFamily="@font/poppins" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.drawerlayout.widget.DrawerLayout>
