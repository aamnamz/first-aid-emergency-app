<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayoutChecklist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6FF">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Include Toolbar -->
        <include layout="@layout/activity_toolbar" />

        <!-- Scrollable Checklist Items -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Page Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checklists"
                    android:fontFamily="@font/poppins"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:layout_marginBottom="16dp"/>



                <!-- Checklist Item Template -->
                <LinearLayout
                    android:id="@+id/homeChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/category_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1."
                        android:textColor="#1A237E"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Home First Aid Kit Checklist"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:layout_marginStart="12dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- Hiking / Trekking Checklist -->
                <LinearLayout
                    android:id="@+id/hikingChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/category_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2."
                        android:textColor="#1A237E"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hiking / Trekking First Aid Checklist"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:layout_marginStart="12dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- Camping Checklist -->
                <LinearLayout
                    android:id="@+id/campingChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/category_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3."
                        android:textColor="#1A237E"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Camping Safety and First Aid Checklist"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:layout_marginStart="12dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- Road Trip Checklist -->
                <LinearLayout
                    android:id="@+id/roadTripChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/category_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4."
                        android:textColor="#1A237E"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Road Trip Emergency Checklist"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:layout_marginStart="12dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- Picnic Checklist -->
                <LinearLayout
                    android:id="@+id/picnicChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/category_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5."
                        android:textColor="#1A237E"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Picnic Checklist"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:layout_marginStart="12dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- Swimming Checklist -->
                <LinearLayout
                    android:id="@+id/swimmingChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/category_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6."
                        android:textColor="#1A237E"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Swimming First Aid Checklist"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:layout_marginStart="12dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- Sports Checklist -->
                <LinearLayout
                    android:id="@+id/sportsChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/category_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7."
                        android:textColor="#1A237E"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sports / Outdoor Activity Checklist"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:layout_marginStart="12dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- Travel Checklist -->
                <LinearLayout
                    android:id="@+id/travelChecklist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/category_card"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8."
                        android:textColor="#1A237E"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Travel Checklist"
                        android:textColor="#1A237E"
                        android:textSize="18sp"
                        android:layout_marginStart="12dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
