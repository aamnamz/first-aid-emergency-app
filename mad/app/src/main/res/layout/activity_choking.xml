<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6FF">

    <!-- Toolbar -->
    <include
        android:id="@+id/mainToolbar"
        layout="@layout/activity_toolbar" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/txtPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choking Emergency"
        android:textSize="22sp"
        android:textColor="#cc1616"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/mainToolbar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:layout_marginBottom="4dp"/>

    <!-- Speak Instructions Button (FIXED AT BOTTOM) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_speak_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â–¶ï¸ Speak Instructions"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        app:backgroundTint="#8E7CC3"
        app:icon="@null"
        android:elevation="6dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtPageTitle"
        android:layout_above="@id/btn_speak_instructions"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/instruction_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âž¤  Steps to Follow"
                android:background="@drawable/bluebg"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Ask if the person can breathe, speak, or cough. If they can cough, encourage them to keep coughing hard."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. If they cannot breathe or cough properly: give 5 firm back blows between the shoulder blades using the heel of your hand."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. If back blows do not help: stand behind them, wrap your arms around their waist, and give 5 quick abdominal thrusts (Heimlich manoeuver)."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Repeat 5 back blows and 5 abdominal thrusts until the object comes out or the person becomes unresponsive."
                android:layout_marginBottom="16dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš« Avoid These Actions"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@drawable/redbg"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textColor="#cc1616"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT hit the person on the back if they are coughing effectively."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT perform abdominal thrusts on infants under 1 year old."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT try to pull out an object blindly with your fingers."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT give water or food until the airway is completely clear."
                android:layout_marginBottom="16dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ” Possible Causes"
                android:textSize="18sp"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:background="@drawable/greenbg"
                android:textColor="#1B5E20"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Eating too fast or talking while eating."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Swallowing large pieces of food without chewing properly."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Small objects accidentally swallowed (common in children)."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Alcohol-related impaired chewing or swallowing."
                android:textSize="16sp"
                android:layout_marginBottom="80dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
