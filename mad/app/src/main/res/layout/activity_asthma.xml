<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6FF">

    <include
        android:id="@+id/mainToolbar"
        layout="@layout/activity_toolbar" />

    <TextView
        android:id="@+id/txtPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asthma Attack"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#cc1616"
        android:textStyle="bold"
        android:layout_below="@id/mainToolbar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:fontFamily="@font/poppins"/>

    <!-- Speak Instructions Button (FIXED AT BOTTOM) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_speak_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â–¶ï¸ Speak Instructions"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        app:backgroundTint="#8E7CC3"
        app:icon="@null"
        android:elevation="6dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtPageTitle"
        android:layout_above="@id/btn_speak_instructions"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/instruction_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âž¤  Steps to Follow"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:background="@drawable/bluebg"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Stay calm and reassure the person."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Sit them upright; do not let them lie down."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Help them use their reliever inhaler (blue inhaler)."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. If available, use a spacer for better breathing."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Give 1 puff at a time and let them take slow breaths."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. Repeat up to 10 puffs, waiting 30â€“60 seconds between each puff."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7. Loosen tight clothing around the neck and chest."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8. Provide fresh air by opening windows or moving to open space."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9. Stay with the person and monitor their breathing."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10. Call emergency services if symptoms donâ€™t improve after 10 puffs or worsen."
                android:layout_marginBottom="20dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš« Avoid These Actions"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#cc1616"
                android:background="@drawable/redbg"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT let them lie down."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT give someone elseâ€™s inhaler."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT make them walk or talk too much."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT give food or drink during the attack."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT panic or rush them."
                android:layout_marginBottom="20dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ” Possible Causes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/greenbg"
                android:textColor="#2E7D32"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Dust, smoke, or pollution."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Pet dander or pollen."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Cold air or weather changes."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Stress or anxiety."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Respiratory infections like cold or flu."
                android:layout_marginBottom="80dp"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
