<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6FF">

    <!-- Toolbar -->
    <include
        android:id="@+id/mainToolbar"
        layout="@layout/activity_toolbar" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/txtPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burns First Aid"
        android:textSize="22sp"
        android:textColor="#cc1616"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/mainToolbar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:layout_marginBottom="4dp"/>

    <!-- Speak Instructions Button (FIXED AT BOTTOM) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_speak_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â–¶ï¸ Speak Instructions"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        app:backgroundTint="#8E7CC3"
        app:icon="@null"
        android:elevation="6dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtPageTitle"
        android:layout_above="@id/btn_speak_instructions"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/instruction_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âž¤  Steps to Follow"
                android:textSize="18sp"
                android:background="@drawable/bluebg"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textColor="#1A237E"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Cool the burned area immediately under cool (NOT icy) running water for 10â€“20 minutes."
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Remove tight items like rings or watches before swelling starts."
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. If clothing is stuck to the burn, do NOT pull it off â€” cut around it gently."
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Cover the burn loosely with a clean cloth or sterile gauze."
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Keep the person warm and monitor for shock symptoms."
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš« Avoid These Actions"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#cc1616"
                android:background="@drawable/redbg"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT apply toothpaste, ghee, oil, butter, or cream on the burn."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT break blisters â€” this increases infection risk."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT use ice directly â€” it can cause frostbite damage."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT remove clothing stuck to the burn."
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ” Possible Causes"
                android:textSize="18sp"
                android:background="@drawable/greenbg"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textColor="#1B5E20"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Direct contact with flames or fire."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Steam or hot liquid spills (scalds)."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Contact with hot metal, appliances, or surfaces."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Chemical exposure from acids or alkalis."
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Electrical burns from faulty wiring or devices."
                android:textSize="16sp"
                android:layout_marginBottom="80dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
