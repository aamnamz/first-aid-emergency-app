<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6FF">

    <!-- Toolbar -->
    <include
        android:id="@+id/mainToolbar"
        layout="@layout/activity_toolbar" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/txtPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fainting First Aid"
        android:textSize="22sp"
        android:textColor="#cc1616"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/mainToolbar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:layout_marginBottom="4dp"/>

    <!-- Speak Instructions Button (FIXED AT BOTTOM) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_speak_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â–¶ï¸ Speak Instructions"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        app:backgroundTint="#8E7CC3"
        app:icon="@null"
        android:elevation="6dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtPageTitle"
        android:layout_above="@id/btn_speak_instructions"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/instruction_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âž¤  Steps to Follow"
                android:background="@drawable/bluebg"
                android:textSize="18sp"
                android:textColor="#1A237E"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Lay the person down flat on their back and raise their legs 20â€“30 cm."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Loosen tight clothing such as collars or belts to make breathing easier."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Check if the person is breathing normally. If not, start CPR and call emergency services."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Ensure fresh air by opening windows or giving space around them."
                android:layout_marginBottom="8dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. If they vomit, turn them on their side to prevent choking."
                android:layout_marginBottom="16dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš« Avoid These Actions"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#cc1616"
                android:background="@drawable/redbg"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT slap them."
                android:layout_marginBottom="6dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT give food or drink while unconscious."
                android:layout_marginBottom="6dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT pour water on them."
                android:layout_marginBottom="6dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT let them stand up immediately."
                android:layout_marginBottom="16dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ” Possible Causes"
                android:textSize="18sp"
                android:textColor="#2E7D32"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:background="@drawable/greenbg"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Dehydration"
                android:layout_marginBottom="6dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Standing for long periods"
                android:layout_marginBottom="6dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Heat exhaustion"
                android:layout_marginBottom="6dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Stress or fear"
                android:layout_marginBottom="6dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Low blood sugar"
                android:layout_marginBottom="6dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Heart problems"
                android:layout_marginBottom="80dp"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
