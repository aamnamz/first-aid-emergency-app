<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6FF">

    <!-- Toolbar -->
    <include
        android:id="@+id/mainToolbar"
        layout="@layout/activity_toolbar" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/txtPageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heat Stroke Emergency"
        android:textSize="22sp"
        android:textColor="#cc1616"
        android:textStyle="bold"
        android:layout_below="@id/mainToolbar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins"/>

    <!-- Speak Instructions Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_speak_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â–¶ï¸ Speak Instructions"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        app:backgroundTint="#8E7CC3"
        app:icon="@null"
        android:elevation="6dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtPageTitle"
        android:layout_above="@id/btn_speak_instructions"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:id="@+id/instruction_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Steps -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âž¤  Steps to Follow"
                android:background="@drawable/bluebg"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Move the person to a shaded or cooler area immediately under a tree, inside a shop, or near a fan."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Loosen or remove heavy clothing like jackets, dupattas, scarves, or caps."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Cool the body: wet cloth on skin, sprinkle water, or fan continuously to lower temperature."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. If the person is awake, give small sips of water or ORS."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. If the person seems confused, faints, or stops sweating, treat as heatstroke and call emergency services."
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

            <!-- Don't Do -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš« Avoid These Actions"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/redbg"
                android:textColor="#cc1616"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT give very cold ice water immediately â€” it may cause shock."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT give caffeinated drinks (tea, coffee, energy drinks)."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT leave the person alone."
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âŒ Do NOT delay calling emergency services if symptoms worsen."
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

            <!-- Causes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ” Possible Causes"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/greenbg"
                android:textColor="#2E7D32"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Prolonged exposure to high temperatures"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Dehydration from not drinking enough water"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Intense physical activity under the sun"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ High humidity reducing the bodyâ€™s ability to cool down"
                android:textSize="16sp"
                android:layout_marginBottom="80dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
